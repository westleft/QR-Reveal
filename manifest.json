{
  "name": "__MSG_name__",
  "description": "__MSG_description__",
  "version": "0.0.0",
  "manifest_version": 3,
  "default_locale": "en",
  "permissions": [
    "activeTab",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "type": "module",
    "service_worker": "src/apps/background/index.ts"
  },
  "action": {
    "default_popup": "src/apps/popup/index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/apps/content/index.ts"]
    }
  ],
  "icons": {
    "16": "src/assets/images/icon.png",
    "48": "src/assets/images/icon.png",
    "128": "src/assets/images/icon.png"
  }
}
