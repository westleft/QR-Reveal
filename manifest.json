{
  "name": "掃碼快讀 | QR Reveal",
  "description": "點選右鍵，可快速掃描網頁上的 QR Code，並開啟連結",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "type": "module",
    "service_worker": "src/apps/background/index.ts"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/apps/content/index.ts"]
    }
  ],
  "icons": {
    "16": "src/assets/images/icon.png",
    "48": "src/assets/images/icon.png",
    "128": "src/assets/images/icon.png"
  }
}
